<div class="container">
	<div class="row">
		<h1>生徒マイページ</h1>
			<table class="table">
					<tr>
						<th>氏名</th>
						<td><%= @student.last_name %><%= @student.first_name %></td>
					</tr>
					<tr>
						<th>シメイ</th>
						<td><%= @student.sub_last_name %><%= @student.sub_first_name %></td>
					</tr>
					<tr>
						<th>メールアドレス</th>
						<td><%= @student.email %></td>
					</tr>
					<tr>
						<th>コース</th>
						<td><%= @student.course.name %></td>
					</tr>
			</table>

			<%= link_to "編集する",  edit_student_path(@student.id), class: "btn btn-primary" %>
			<%= link_to "出席履歴一覧", students_attendees_path, class: "btn btn-primary" %>
	</div>
</div>