<!DOCTYPE html>
<html>
  <head>
    <title>Attendance</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if teacher_signed_in? %>
      <header class="teacher_header">
        <div class="header-content">
          <h3 class="text-white">Attendance</h3>
            <ul class="nav nav-tabs navbar-right">
              <%= link_to "ログイン（生徒用）", new_student_session_path, class: "glyphicon glyphicon-log-in" %>
              <%= link_to "新規登録（生徒用）", new_student_registration_path, class: "glyphicon glyphicon-edit" %>
              <%= link_to "ログイン（先生用）", new_teacher_session_path, class: "glyphicon glyphicon-log-in"%>
              <%= link_to "新規登録（先生用）", new_teacher_registration_path, class: "glyphicon glyphicon-edit"%>
              <%= link_to "logout",destroy_teacher_session_path, method: :delete, class: 'glyphicon glyphicon-log-out' %>
              <%= link_to "レッスン一覧", lessons_path %>
              <%= link_to "クラス一覧", area_classes_path %>
              <%= link_to "ジャンル一覧", genres_path %>
            </ul>
        </div>
      </header>
    <% elsif student_signed_in? %>
      <header class="teacher_header">
        <div class="header-content">
            <h3 class="text-white">Attendance</h3>
              <ul class="nav nav-tabs navbar-right">
                <%= link_to "ログイン（生徒用）", new_student_session_path, class: "glyphicon glyphicon-log-in" %>
              </ul>
        </div>
      </header>
    <% else %>
      <header class="teacher_header">
        <div class="header-content">
          <h3 class="text-white">Attendance</h3>
            <ul class="nav nav-tabs navbar-right">
              <%= link_to "ログイン（生徒用）", new_student_session_path, class: "glyphicon glyphicon-log-in" %>
              <%= link_to "新規登録（生徒用）", new_student_registration_path, class: "glyphicon glyphicon-edit" %>
              <%= link_to "ログイン（先生用）", new_teacher_session_path, class: "glyphicon glyphicon-log-in"%>
              <%= link_to "新規登録（先生用）", new_teacher_registration_path, class: "glyphicon glyphicon-edit"%>
            </ul>
        </div>
      </header>
    <% end %>
    <%= yield %>
  </body>
</html>
