<div class="container">
	<div class="row">
			<h1>レッスン新規登録</h1>
			<%= form_for @lesson do |f| %>
				<div class="col-xs-3">
					<h3>画像</h3>
						<%= attachment_image_tag @lesson, :image_id, format: "jpeg", id: "img_prev" %>
					<%#= f.attachment_field :image %>
				</div>
				<div class="col-xs-9">
					<h3>クラス</h3>
					<%= f.collection_select :area_class, @area_classes, :id, :name, :include_blank => "選択して下さい" %>
					<h3>ジャンル</h3>
					<%= f.collection_select :genre, @genres, :id, :name, :include_blank => "選択して下さい" %>
					<h3>担当者</h3>
					<%= f.collection_select :teacher, @teachers, :id, :last_name, :include_blank => "選択して下さい" %>
					<%= f.submit '新規登録', class: "btn btn-primary" %>
				</div>
			<% end %>
	</div>
</div>
