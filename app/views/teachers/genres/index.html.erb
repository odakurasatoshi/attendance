<div class="container">
	<div class="row">
		<h1>ジャンル一覧・追加</h1>
			<%= form_for [:teachers,@genre] do |f| %>
				<%= f.label :ジャンル %>
				<%= f.text_field :name %>
				<%= f.submit '追加', class: "btn btn-primary"%>
			<% end %>
		<table class="table table-striped">
			<thead>
				<th>ジャンル</th>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<td><%= link_to "削除", teachers_genre_path(genre.id), method: :delete, data: {confirm: "本当に削除しますか?"},class: "btn btn-danger" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>