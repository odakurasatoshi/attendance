<div class="container">
	<div class="row">
		<h1>ジャンル一覧・追加</h1>
			<%= form_for [:teachers,@genre] do |f| %>
				<% if @genre.errors.any? %>
					<h3 class="message-error"><%= @genre.errors.count %> errors prohibited this ジャンル from being saved:</h3>
						<ul>
							<% @genre.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							<% end %>
						</ul>
				<% end %>
				<%= f.label :ジャンル %>
				<%= f.text_field :name %>
				<%= f.submit '追加', class: "btn btn-primary"%>
			<% end %>
		<table class="table table-striped">
			<thead>
				<th>ジャンル</th>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<td><%= link_to "編集", edit_teachers_genre_path(genre.id) %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>